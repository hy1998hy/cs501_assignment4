<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:id="@+id/LLLMain"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/LLHint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:id="@+id/selecthint"
                android:textSize="25sp"
                android:text="@string/selecthint"
                android:textColor="@color/purple_500"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <ScrollView
            android:id="@+id/container_scroll_view"
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:layout_height="0dp" >
            <GridLayout
                android:id="@+id/GLLetters"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:columnCount="4"
                android:paddingTop="150dp"
                android:paddingBottom="0dp"
                android:fadeScrollbars="false"
                >
            </GridLayout>
        </ScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_gravity="center"
            android:gravity="center"
            >
            <Button
                android:id="@+id/gethint"
                android:layout_width="0dp"
                android:text="@string/wordhint"
                android:textSize="30sp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"/>
            <TextView
                android:id="@+id/wordhint"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="30sp"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLRMain"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/IMGdisplay"
            android:contentDescription="@string/phase"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.5"
            android:layout_gravity="center"
            app:srcCompat="@drawable/phase1"/>
        <LinearLayout
            android:id="@+id/LLRImg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.3"

            android:gravity="center">

            <TextView
                android:id="@+id/game_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="70sp"
                android:gravity="center"
                android:textColor="@color/teal_200"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>